# ISS - Innovazione Sociale Salernitana
# Environment Configuration File
# Copia questo file in .env e personalizza i valori

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=production
DEBUG=false
DATA_DIR=./data

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_PORT=5433

# ===========================================
# SECURITY SETTINGS
# ===========================================
SECRET_KEY=your-super-secret-key-minimum-32-characters-long-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PORT=6380

# ===========================================
# BACKEND API SETTINGS
# ===========================================
BACKEND_PORT=8001
LOG_LEVEL=info

# ===========================================
# FRONTEND SETTINGS
# ===========================================
FRONTEND_PORT=3001
FRONTEND_API_URL=/api

# ===========================================
# NGINX PROXY (Production)
# ===========================================
PROXY_PORT=80
PROXY_SSL_PORT=443

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@iss-aps.it
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_STARTTLS=true

# ===========================================
# CORS SETTINGS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,https://iss-aps.it,https://www.iss-aps.it

# ===========================================
# DEVELOPMENT TOOLS (Development only)
# ===========================================
MAILHOG_SMTP_PORT=1026
MAILHOG_WEB_PORT=8026

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
ENABLE_METRICS=true
ENABLE_TRACING=false

# ===========================================
# BACKUP SETTINGS
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
